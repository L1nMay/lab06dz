<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*" 
           Name="$(var.PackageName)" 
           Version="$(var.PackageVersion)"
           Manufacturer="$(var.PackageVendor)" 
           Language="1033"
           UpgradeCode="$(var.UpgradeCode)">
    
    <Package InstallerVersion="200" 
             Compressed="yes" 
             InstallScope="perMachine"
             Comments="$(var.PackageComments)"/>
    
    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    <MediaTemplate EmbedCab="yes" />
    
    <Icon Id="icon.ico" SourceFile="$(var.ProductIcon)"/>
    <Property Id="ARPPRODUCTICON" Value="icon.ico" />
    
    <UIRef Id="WixUI_Minimal" />
    <WixVariable Id="WixUILicenseRtf" Value="$(var.LicenseFile)" />
    
    <Feature Id="ProductFeature" Title="Main Feature" Level="1">
      <ComponentGroupRef Id="ProductComponents" />
    </Feature>
    
    <Property Id="ARPHELPLINK">https://yourcompany.com/support</Property>
    <Property Id="ARPURLINFOABOUT">https://yourcompany.com</Property>
    <Property Id="ARPCONTACT">support@yourcompany.com</Property>
  </Product>
  
  <Fragment>
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder">
        <Directory Id="INSTALLFOLDER" Name="$(var.PackageName)" />
      </Directory>
      <Directory Id="ProgramMenuFolder">
        <Directory Id="ApplicationProgramsFolder" Name="$(var.PackageName)"/>
      </Directory>
      <Directory Id="DesktopFolder" Name="Desktop"/>
    </Directory>
  </Fragment>
  
  <Fragment>
    <ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
      <!-- Файлы будут добавлены автоматически -->
    </ComponentGroup>
  </Fragment>
</Wix>
